<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/sceneBackgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="@null" />

    <RelativeLayout
        android:id="@+id/collocationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ybw.yibai.common.widget.ViewPagerNoAnim
            android:id="@+id/potViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:overScrollMode="never" />

        <com.ybw.yibai.common.widget.ViewPagerNoAnim
            android:id="@+id/plantViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:overScrollMode="never" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/productCodeImageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background_collocation"
        android:contentDescription="@null"
        android:gravity="center"
        android:src="@mipmap/product_code_tag"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/scenePreviewButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background_button"
        android:text="@string/scene_preview"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="invisible" />
</RelativeLayout>