<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shareLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/qrCodeImageView"
        android:layout_width="228dp"
        android:layout_height="228dp"
        android:contentDescription="@null" />

    <RelativeLayout
        android:layout_width="228dp"
        android:layout_height="80dp"
        android:background="@drawable/background_white_semicircle_bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/launcherImageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clientNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/main_text_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/guangzhou_yibai_network_technology_provides_a_quote"
                android:textColor="@color/prompt_low_text_color"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_marginEnd="10dp"
            android:id="@+id/launcherImageView"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>
</LinearLayout>