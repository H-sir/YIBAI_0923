<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/defaultMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:textSize="@dimen/action_button_content_margin" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/trans_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/defaultCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/action_button_content_margin" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/trans_grey" />

        <TextView
            android:id="@+id/defaultContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/pickerview_timebtn_nor"
            android:textSize="@dimen/action_button_content_margin" />

    </LinearLayout>
</LinearLayout>