<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/exist_scene_title"
        android:textColor="@color/pickerview_timebtn_nor"
        android:textSize="@dimen/action_button_content_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_background_color"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/exist_scene_text"
        android:textSize="@dimen/action_button_content_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/existSceneCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/action_button_content_margin" />

        <TextView
            android:id="@+id/existSceneContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="继续"
            android:textColor="@color/pickerview_timebtn_nor"
            android:textSize="@dimen/action_button_content_margin" />

    </LinearLayout>
</LinearLayout>