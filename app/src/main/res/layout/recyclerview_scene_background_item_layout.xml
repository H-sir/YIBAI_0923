<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/sceneBackgroundImageView"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_image_view"
            android:contentDescription="@null"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/deleteImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="86dp"
            android:contentDescription="@null"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/simulate_delete" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="106dp"
            android:layout_height="34dp"
            android:layout_below="@+id/sceneBackgroundImageView"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_scene_name"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/select_scene"
            android:textColor="@color/main_text_color"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
